<div class="panel panel-default text-center">
  <div class="panel-heading">
    <h2>Product Categories</h2>
  </div>
  <div class="panel-body">
    <button type="button" name="button" class="btn btn-primary btn-block btn-lg">Create New Category</button> <br>

    <table class="table table-bordered">
      <tr>
        <th>id</th>
        <th>Name</th>
        <th>Description</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
      <% @categories.each do |c| %>
      <tr>
        <td><%= c.id %></td>
        <td><%= c.name %></td>
        <td><%= c.description %></td>
        <td><a href="#">Show</a></td>
        <td><a href="#">Edit</a></td>
        <td><a href="#">Delete</a></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
