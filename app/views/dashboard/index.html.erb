<div class="container">
  <h1 class="text-center">Viking Store Analytics Dashboard</h1>

  <div class="row">
    <!-- Aggregate data -->
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading text-center">
          <h2>1. Overall Platform</h2>
        </div>
        <div class="panel-body">
          <h3>Last 7 Days</h3>
          <table class="table table-bordered">
            <tr>
              <th>Item</th>
              <th>Data</th>
            </tr>
            <tr>
              <td>New Users</td>
              <td><%= @one[:seven_days][:users] %></td>
            </tr>
            <tr>
              <td>Orders</td>
              <td><%= @one[:seven_days][:orders] %></td>
            </tr>
            <tr>
              <td>New Products</td>
              <td><%= @one[:seven_days][:products] %></td>
            </tr>
            <tr>
              <td>Revenue</td>
              <td>$<%= @one[:seven_days][:revenue] %></td>
            </tr>
          </table>

          <h3>Last 30 Days</h3>
          <table class="table table-bordered">
            <tr>
              <th>Item</th>
              <th>Data</th>
            </tr>
            <tr>
              <td>New Users</td>
              <td><%= @one[:thirty_days][:users] %></td>
            </tr>
            <tr>
              <td>Orders</td>
              <td><%= @one[:thirty_days][:orders] %></td>
            </tr>
            <tr>
              <td>New Products</td>
