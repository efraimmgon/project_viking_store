            </tr>
            <tr>
              <td>Revenue</td>
              <td>$<%= @one[:thirty_days][:revenue] %></td>
            </tr>
          </table>

          <h3>Total</h3>
          <table class="table table-bordered">
            <tr>
              <th>Item</th>
              <th>Data</th>
            </tr>
            <tr>
              <td>New Users</td>
              <td><%= @one[:total][:users] %></td>
            </tr>
            <tr>
              <td>Orders</td>
              <td><%= @one[:total][:orders] %></td>
            </tr>
            <tr>
              <td>New Products</td>
              <td><%= @one[:total][:products] %></td>
            </tr>
            <tr>
              <td>Revenue</td>
              <td>$<%= @one[:total][:revenue] %></td>
            </tr>
          </table>
        </div>
      </div>

    </div>

    <!-- User demographics -->
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading text-center">
          <h2>2. User Demographics and Behavior</h2>
        </div>
        <div class="panel-body">
          <h3>Top 3 States Users Live In (billing)</h3>
          <table class="table table-bordered">
            <tr>
              <th>Item</th>
              <th>Data</th>
            </tr>
            <% @two[:states].each do |keyvals| %>
            <tr>
              <td><%= keyvals[:name] %></td>
              <td><%= keyvals[:total] %></td>
            </tr>
            <% end %>

          </table>

          <h3>Top 3 Cities Users Live In (billing)</h3>
          <table class="table table-bordered">
            <tr>
              <th>Item</th>
              <th>Data</th>
            </tr>
            <% @two[:cities].each do |keyvals| %>
            <tr>
              <td><%= keyvals[:name] %></td>
              <td><%= keyvals[:total] %></td>
            </tr>
            <% end %>
          </table>


          <h3>Top User With...</h3>
